<div class="shared_link"></div>
<div class="filter">
  <%= form_for_filterrific @filterrific do |f| %>
    <div>
      <div>
        Amount by
        <%= f.select(:filter_by_amount, ["desc", "asc"]) %>
      </div>
      <div>
        Category
        <%= f.select(:filter_by_category, Spend.categories,{ include_blank: '- Any -' }) %>
      </div>
      <div>
        <%= f.submit 'Filter' %>
      </div>
    </div>

    <div>
      <%= link_to(
            'Reset filters',
            reset_filterrific_url,
            ) %>
    </div>
  <%end %>
</div>

<hr>
<div class="content">
  <div class="spends">
    <% @spends.each do |spend| %>
      <div class="spend">
        <%= link_to spend.title, spend_url(spend) %>
        <p>Description: <%= spend.description %></p>
        <p>Amount: <%= spend.amount %></p>
        <p>Category: <%= spend.category %></p>
      </div>
    <% end %>
</div>
  <div class="info">
    <p>Your total spends value: <%= current_user.total_spends_value %></p>
  </div>
</div>
