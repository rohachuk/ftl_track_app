<%= form_for @spend, url: spends_path, method: :post do |f| %>
  Title: <%= f.text_field :title %>
  Description <%= f.text_area :description %>
  Amount: <%= f.text_field :amount %>
  Category: <%= f.select(:category, options_for_select(Spend.categories.map { |key, value| [key.humanize, key] }))  %>
  <%= f.submit "Create" %>
<% end %>